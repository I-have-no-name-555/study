<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuan.dao.LockDao">


    <select id="getLockById" resultMap="myLock">
        select l.*, k.id kid, k.key_name
        from t_lock l
                 left join t_key k on l.id = k.lock_id
        where l.id = #{id}
    </select>
    <select id="getLockByIdSimple" resultType="com.xuan.bean.Lock">
        select *
        from t_lock
        where id = #{id}
    </select>
    <select id="getLockByIdByStep" resultMap="myLockStep">
        select *
        from t_lock
        where id = #{id}
    </select>
    <resultMap id="myLockStep" type="com.xuan.bean.Lock">
        <id property="id" column="id"/>
        <result property="lockName" column="lock_name"/>
        <collection property="keys" ofType="com.xuan.bean.Key"
                    select="com.xuan.dao.KeyDao.getKeysByLockId"
                    column="id"/>
    </resultMap>
    <resultMap id="myLock" type="com.xuan.bean.Lock">
        <id property="id" column="id"/>
        <result property="lockName" column="lock_name"/>
        <collection property="keys" ofType="com.xuan.bean.Key">
            <id property="id" column="kid"/>
            <result property="keyName" column="key_name"/>
        </collection>
    </resultMap>


</mapper>